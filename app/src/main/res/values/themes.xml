<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Companion" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryDark">@color/neu_red</item>
        <item name="colorPrimary">@color/neu_black</item>
        <item name="colorPrimaryVariant">@color/neu_black</item>
        <item name="colorOnPrimary">@color/neu_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textColorSecondary">@color/neu_red</item>
        <!-- Status bar color. -->
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="l">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="l">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="neu_button">
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textColor">@color/neu_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25dp</item>
        <item name="neuButtonType">elevated_soft</item>
        <item name="neuPlatformColor">@color/neu_black</item>
    </style>

    <style name="neu_image">
        <item name="android:padding">10dp</item>
        <item name="neuPlatformColor">@color/neu_black</item>
    </style>

    <style name="neu_menu_item">
        <item name="android:textSize">18dp</item>
    </style>

    <style name="neu_title">
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="neu_dialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:background">@color/neu_black</item>
        <item name="android:textColor">@color/neu_white</item>
        <item name="android:tint">@color/neu_red</item>
        <item name="buttonBarPositiveButtonStyle">@style/ButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/ButtonStyle</item>
        <item name="dialogCornerRadius">50dp</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/neu_red</item>
    </style>

    <style name="check">
        <item name="colorAccent">@color/neu_red</item>
    </style>

    <style name="neu_drop_down"  parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="colorSurface">@color/neu_red</item>
    </style>
</resources>